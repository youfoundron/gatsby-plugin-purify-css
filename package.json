{
  "name": "gatsby-plugin-purify-css",
  "version": "2.0.0",
  "description": "Gatsby plugin for removing unused CSS in production.",
  "keywords": [
    "gatsby",
    "plugin",
    "purify",
    "uncss",
    "css"
  ],
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "standard | snazzy",
    "clean": "rm -f gatsby-node.js",
    "build": "webpack",
    "develop": "webpack --watch",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": "git@github.com:rongierlach/gatsby-plugin-purify-css.git",
  "author": "Ron Gierlach <rongierlach@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "bluebird": "^3.5.0",
    "cheerio": "^1.0.0-rc.2",
    "klaw": "^2.1.0",
    "purify-css": "^1.2.5",
    "through2-filter": "^2.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "jest": "^21.1.0",
    "pre-commit": "^1.2.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "webpack": "^3.6.0",
    "webpack-make-rule": "^2.0.0",
    "webpack-node-externals": "^1.6.0"
  },
  "pre-commit": [
    "test",
    "lint"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "/example/",
      "/node_modules/"
    ]
  },
  "standard": {
    "ignore": "example",
    "parser": "babel-eslint",
    "globals": [
      "it",
      "expect",
      "describe"
    ]
  }
}
